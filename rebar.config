{deps,
 []}.

{erl_opts, [warn_unused_vars,
            warn_shadow_vars,
            warn_unused_import,
            warn_obsolete_guard,
            debug_info,
            compressed
           ]}.
{overrides, [{add, [{erl_opts, [compressed]}]}]}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               warnings_as_errors, deprecated_functions
              ]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.

{profiles,
 [{test,
   [{deps,
     [{emqx_ct_helper, {git, "https://github.com/emqx/emqx-ct-helper", {tag, "2.1.1"}}},
      {emqtt, {git, "https://github.com/emqx/emqtt", {tag, "1.4.6"}}}
     ]},
    {erl_opts, [debug_info]}
   ]}
 ]}.
